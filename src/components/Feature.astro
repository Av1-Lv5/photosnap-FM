---
// types
import type Feature from "../types/Feature";
export interface Props {
	feature: Feature;
}
// props
const { feature } = Astro.props as Props;
---

<div class="feature">
	<div class="img">
		<img src={feature.icon} alt="" />
	</div>
	<h3>{feature.title}</h3>
	<p>{feature.content}</p>
</div>

<style>
	.feature {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-between;
		gap: 25px;
		max-width: 350px;
	}
	p {
		text-align: center;
	}
	.img {
		height: 72px;
		display: flex;
		align-items: center;
	}
</style>
